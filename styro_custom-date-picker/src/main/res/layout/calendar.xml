<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/drawer"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/slider_bg" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/monthSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="45dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/month_prev"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:paddingVertical="7dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Month"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/month_next"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:paddingVertical="7dp"
                android:src="@drawable/ic_arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="45dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/year_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Year"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/year_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.8"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_arrow_down" />

        </LinearLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/calendarHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp"
        tools:listitem="@layout/day" />

    <GridView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="2dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp"
        tools:listitem="@layout/day" />

    <LinearLayout
        android:id="@+id/calendar_choose"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:id="@+id/choose_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Select"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>